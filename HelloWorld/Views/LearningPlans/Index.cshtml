@model IEnumerable<HelloWorld.Models.LearningPlan>

@{
    ViewBag.Title = "Index:" + ViewBag.HelloName;
    
    var parentId = @ViewBag.ParentId;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LearningType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LearningType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID }) |
            @Html.ActionLink("Children", "Index", new { id = item.ID })
        </td>
    </tr>


}

</table>

<p>
    @Html.ActionLink("GO BACK", "Index", new { id = @parentId })
</p>
